<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_edit_profile"
    tools:context="xyz.garrulous.garrulous.EditProfileActivity"
    android:background="@android:color/holo_blue_light">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:id="@+id/imageView"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/text_first_name"
            android:textSize="42dp"
            android:textColor="@color/garrulousWhite"
            android:id="@+id/firstNameTexViewProfile" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_location"
            android:id="@+id/locationTextViewProfile"
            android:textColor="@color/garrulousWhite"
            android:layout_marginTop="85dp"
            android:textSize="16sp"
            android:gravity="center"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/locationEditText"
            android:layout_below="@+id/locationTextViewProfile"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_age"
            android:textColor="@color/garrulousWhite"
            android:textSize="16sp"
            android:id="@+id/textViewAge"
            android:gravity="center"
            android:layout_below="@+id/locationEditText"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/firstNameEditText"
            android:layout_below="@+id/textViewAge"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_first_name"
            android:textColor="@color/garrulousWhite"
            android:textSize="16sp"
            android:id="@+id/firstNameTextView"
            android:gravity="center"
            android:layout_below="@+id/firstNameEditText"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/firstNameEditTextProfile"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_last_name"
            android:textColor="@color/garrulousWhite"
            android:textSize="16sp"
            android:id="@+id/lastNameTextView"
            android:gravity="center"
            android:layout_below="@+id/firstNameEditTextProfile"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lastNameEditTextProfile"
            android:layout_below="@+id/lastNameTextView"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_about"
            android:textColor="@color/garrulousWhite"
            android:textSize="16sp"
            android:id="@+id/aboutTextView"
            android:gravity="center"
            android:layout_below="@+id/lastNameEditTextProfile"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/aboutMultiLine"
            android:layout_below="@+id/aboutTextView"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_update"
            android:id="@+id/updateProfileButton"
            android:textColor="@color/garrulousWhite"
            android:background="@color/garrulousOrange"
            android:layout_below="@+id/aboutMultiLine"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:foregroundGravity="bottom|center"/>
    </RelativeLayout>

</RelativeLayout>
